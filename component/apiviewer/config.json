{
  "name"    : "Apiviewer (application) config",

  "include" :
  [
    {
      "path" : "${ROOT}/api.json",
      "as"   : "apicnf"
    },

    {
      "path" : "${ROOT}/image.json"
    },

    {
      "path"   : "${QOOXDOO_PATH}/tool/data/config/application.json",

      // select everything except 'source' and 'build' which are defined locally
      "block" :
      [
        "common",
        "source",
        "source-script",
        "build",
        "build-script",
        "build-files",
        "build-resources"
      ]
    }
  ],

  "export" :
    [
      "api",
      "api-data",
      "build",
      "clean",
      "compile-scss",
      "distclean",
      "fix",
      "info",
      "inspector",
      "lint",
      "migration",
      "pretty",
      "profiling",
      "source",
      "source-all",
      "source-hybrid",
      "translation",
      "validate-config",
      "validate-manifest"
    ],

  "default-job" : "source",

  "let" :
  {
    "APPLICATION"  : "apiviewer",
    "APPLICATION_PATH" : "apiviewer",
    "QOOXDOO_PATH" : "../..",
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "ROOT"         : ".",
    "TEST_INCLUDE" : "${APPLICATION}.*",
    "MOBILE_THEME" : "custom",
    "MOBILE_THEME_PATH" : "${APPLICATION_PATH}/css/${MOBILE_THEME}.css",
    "TEST_LOADER" : "testrunner.TestLoaderMobile"
  },

  "config-warnings" :
  {
    "job-shadowing" : [
      "translation",
      "libraries"
    ]
  },

  "jobs" :
  {
    "libraries" : {
      "extend" : [ "apicnf::libraries" ]
    },

    "source" :
    {
      "extend" : [ "apicnf::source" ],

      "let" :
      {
        "API_INCLUDE"  : ["${APPLICATION}.*"]
      }
    },

    "compile-scss" :
    {
      "desc"   : "Compile the theme scss once",
      "extend" : ["cache"],
      "let" :
      {
        "QX_SHARED_THEME_PATH"      : "${QOOXDOO_PATH}/framework/source/resource/qx/scss",
        "APPLICATION_THEME_PATH"    : "source/theme/${APPLICATION_PATH}",
        "APPLICATION_RESOURCE_PATH" : "source/resource/${APPLICATION_PATH}"
      },
      "shell" :
      {
        "command" : "sass -C -t compressed -I ${QX_SHARED_THEME_PATH} --update ${APPLICATION_THEME_PATH}/scss:${APPLICATION_RESOURCE_PATH}/css",
        "command-not-found" : "It seems that Sass (http://sass-lang.com/) is not installed and/or executable, which is needed for the SCSS-compilation."
      }
    },

    "build" :
    {
      "extend" : [ "apicnf::build" ],

      "let" :
      {
        "API_INCLUDE"  : ["${APPLICATION}.*"]
      },

      "api" :
      {
        "warnings" : {
          "=output": [ "data" ]
        }
      }
    }

    ,"translation" :
    {
      "translate" : { "poentry-with-occurrences" : false  }
    }
  }
}

