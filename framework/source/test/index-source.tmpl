  <script src="../script/qx-source.js"></script>

  <script src="tests/mochaSetup.js"></script>
  <script src="tests/TestCase.js"></script>
  <script src="tests/website/setup.js"></script>

  <!-- injector:js -->
  <!-- endinjector -->

  <script>
    q.ready( function() {
      var runner = mocha.run();
      runner.on("end", function() {
        window.testsDone = true;
      });

      // to disable scroll-to-end you have to add scrolltoend=false to uri
      if (!(/scrolltoend=false/i.test(window.location.search))) {
        var container = document.getElementById('mocha');
        container.addEventListener('DOMSubtreeModified', function () {
            window.scrollTo(0, document.body.scrollHeight);
        }, false);
      }
    });
  </script>
</body>
</html>
